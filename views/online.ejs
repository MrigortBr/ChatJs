<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/4.6.1/socket.io.js" integrity="sha512-xbQU0+iHqhVt7VIXi6vBJKPh3IQBF5B84sSHdjKiSccyX/1ZI7Vnkt2/8y8uruj63/DVmCxfUNohPNruthTEQA==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>

</head>
<body>
    <p id="online">Online</p>

    <script>
        const socket = io("http://localhost:3030", {query: {lastSocket: localStorage.getItem("socket")}});

        socket.on(`${localStorage.getItem("socket")}Disconnect`,() =>{
            document.getElementById(online).innerHTML = "offline"
        })
        setInterval(() => {
            if(socket.id){
                localStorage.setItem("socket", socket.id)
                clearInterval(this)
            }else{
                console.log("nao criado")
            }
        }, 100);

    </script>
</body>
</html>